      for(var i=0; i<sortedarr.length; i++){ sortedstr+=sortedarr[i]+"|";}
      myarray=sortedstr.substring(0, modArray__MODULE_ID__.length-1);
      addarray();}
    
    function sortName__MODULE_ID__(a, b){
