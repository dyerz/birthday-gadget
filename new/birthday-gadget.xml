	}
	
	function goConvert(){
		var html=[];
		html.push('<h1>Convert</h1>');
		html.push('Open your Google spreadsheet<br />Copy the text below<br />Paste the text into the spreadsheet.');
		html.push('<br />See <a href="http://birthday-gadget.googlecode.com/svn/trunk/new/faq.html" title="Help" target="_blank">the help website</a> for additional assistance.');
